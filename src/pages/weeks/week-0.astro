<script is:inline type="module">
  import { createPlayground } from 'https://esm.sh/@live-codes/sdk@0.3.9';

  /** Utility: only run once per details element */
  function onOpenOnce(detailsEl, fn) {
    const handler = () => {
      if (detailsEl.open) {
        detailsEl.removeEventListener('toggle', handler);
        fn();
      }
    };
    detailsEl.addEventListener('toggle', handler);
  }

  // PART 3
  const d3 = document.getElementById('w0-part3-details');
  onOpenOnce(d3, () => {
    createPlayground('#w0-part3', {
      template: 'static',
      params: { mode: 'full', console: 'closed', lineNumbers: true },
      // Pinning the app version = fewer surprises during the quarter
      appUrl: 'https://v26.livecodes.io',
      config: {
        markup: {
          language: 'html',
          content: `<!DOCTYPE html>
<html>
